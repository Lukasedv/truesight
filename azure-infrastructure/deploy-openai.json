{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "openAiServiceName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure OpenAI service"
            },
            "defaultValue": "[concat('truesight-openai-', uniqueString(resourceGroup().id))]"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources"
            }
        },
        "sku": {
            "type": "string",
            "defaultValue": "S0",
            "allowedValues": [
                "S0"
            ],
            "metadata": {
                "description": "The pricing tier of the Azure OpenAI service"
            }
        },
        "deploymentName": {
            "type": "string",
            "defaultValue": "gpt-4o-deployment",
            "metadata": {
                "description": "Name of the model deployment"
            }
        },
        "modelName": {
            "type": "string",
            "defaultValue": "gpt-4o",
            "allowedValues": [
                "gpt-4o",
                "gpt-4-vision-preview",
                "gpt-4-turbo"
            ],
            "metadata": {
                "description": "The model to deploy"
            }
        },
        "modelVersion": {
            "type": "string",
            "defaultValue": "2024-05-13",
            "metadata": {
                "description": "The version of the model to deploy"
            }
        },
        "deploymentCapacity": {
            "type": "int",
            "defaultValue": 20,
            "metadata": {
                "description": "The capacity of the deployment (in thousands of tokens per minute)"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2023-05-01",
            "name": "[parameters('openAiServiceName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('sku')]"
            },
            "kind": "OpenAI",
            "properties": {
                "apiProperties": {},
                "customSubDomainName": "[parameters('openAiServiceName')]",
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts/deployments",
            "apiVersion": "2023-05-01",
            "name": "[concat(parameters('openAiServiceName'), '/', parameters('deploymentName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('openAiServiceName'))]"
            ],
            "properties": {
                "model": {
                    "format": "OpenAI",
                    "name": "[parameters('modelName')]",
                    "version": "[parameters('modelVersion')]"
                }
            },
            "sku": {
                "name": "Standard",
                "capacity": "[parameters('deploymentCapacity')]"
            }
        }
    ],
    "outputs": {
        "openAiServiceName": {
            "type": "string",
            "value": "[parameters('openAiServiceName')]"
        },
        "openAiEndpoint": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.CognitiveServices/accounts', parameters('openAiServiceName'))).endpoint]"
        },
        "deploymentName": {
            "type": "string",
            "value": "[parameters('deploymentName')]"
        },
        "resourceGroupName": {
            "type": "string",
            "value": "[resourceGroup().name]"
        }
    }
}